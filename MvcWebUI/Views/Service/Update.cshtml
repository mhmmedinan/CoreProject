@model Entities.Concrete.Service
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
<div class="card">
    <div class="card-body">
        <p class="card-description" style="font-size: 18px">Hizmet Güncelleme </p>

        @using (Html.BeginForm("Update", "Service", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.HiddenFor(x => x.Id)
                @Html.Label("Başlık")
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                <br />
                @Html.Label("Görsel")
                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                <br />
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        }
    </div>
</div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/Template/assets/vendors/js/vendor.bundle.base.js"></script>
