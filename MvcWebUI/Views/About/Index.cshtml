@model Entities.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card col-md-10 offset-md-1">
    <div class="card-header border-0">
        <h3 class="mb-0">Hakkımda Güncelleme Sayfası</h3>
    </div>

    @using (Html.BeginForm("Index", "About", FormMethod.Post))
    {
        <div class="mb-3">
            @Html.HiddenFor(x => x.Id)
            @Html.Label("Başlık")
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            <br />
          
            @Html.Label("Yaş")
            @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
            <br />
            @Html.Label("Mail")
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
            <br />
            @Html.Label("Telefon")
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            <br />
            @Html.Label("Adres")
            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
            <br />
            @Html.Label("Resim Yolu")
            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
            <br />
            @Html.Label("Açıklama")
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
            <br />
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    }
</div>


