@using Entities.Concrete
@model List<UserMessage>
@{
    ViewData["Title"] = "SenderMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description" style="font-size: 18px">Giden Kutusu </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Alıcı</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ReceiverName</td>
                            <td>@item.Subject</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                            <td><a asp-action="SenderDelete" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-action="AdminMessageDetails" asp-route-id="@item.Id" class="btn btn-outline-success">Mesajı Gör</a></td>
                        </tr>
                    }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/Template/assets/vendors/js/vendor.bundle.base.js"></script>

