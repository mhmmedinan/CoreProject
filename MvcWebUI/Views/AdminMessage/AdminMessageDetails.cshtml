@model Entities.Concrete.UserMessage
@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3>Mesaj Detayları</h3>
                <hr />
                <h5>Gönderen: @Model.SenderName | @Model.Sender</h5>
                <h5>Alıcı: @Model.ReceiverName | @Model.Receiver</h5>
                <h5>Konu: @Model.Subject</h5>
                <h5>Tarih: @(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</h5>
                <hr />
                <h6 class="card-description">@Model.MessageContent</h6>
            </div>
        </div>
    </div>
</div>

