@model Entities.Concrete.Announcement
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 >Duyuru Detayları</h2>
                <h5 >Başlık: @Model.Title</h5>
                <h5>Tarih: @(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</h5>
                <h5 >Tür: @Model.Status</h5>
                <h6 class="card-description">@Model.Content</h6>
            </div>
        </div>
    </div>
</div>