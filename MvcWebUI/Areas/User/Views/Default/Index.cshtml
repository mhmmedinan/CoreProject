@using Entities.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
           <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                       <tr>
                            <td>@item.Title</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                           <td><label class="badge badge-info">@item.Status</label></td>
                           <td><a href="/User/Default/Details/@item.Id"  class="btn btn-outline-primary">Detaylar</a></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

