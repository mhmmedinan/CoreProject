@using Entities.Concrete
@model List<UserMessage>
@{
    ViewData["Title"] = "ReceiverMessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Konu</th>
                        <th>Gönderen</th>
                        <th>Tarih</th>
                        <th>Detaylar</th>
                      
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Subject</td>
                            <td>@item.SenderName</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy HH:mm"))</td>
                            <td><a asp-controller="Message" asp-action="MessageDetails" asp-route-id="@item.Id"  class="btn btn-outline-primary">Mesajı Gör</a></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



